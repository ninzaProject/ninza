<%# <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css"/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script> %>

<%= stylesheet_link_tag 'registration', media: 'all' %>
<%= render partial: 'signin_modal' %>
<%= render partial: 'signup_modal' %>


<div id="side-bar-view" class="ui sidebar right inverted vertical menu">
  <ul>
    <li class="item">
      1
    </li>
    <li class="item">
      2
    </li>
    <li class="item">
      3
    </li>
  </ul>
</div>

<div class="pusher">
  <div id="spa" class="ui container grid">
    <div class="row">
      <div id="app-view" class="conatiner twelve wide column">
        <nav id="nav-view">
          <div class="ui top fixed inverted menu">
            <a class="ui item" data-nav-value="home">
              Home
            </a>
            <a class="item" data-nav-value="chat">
              Chat
            </a>
            <a class="item" data-nav-value="guild">
              Guild
            </a>
            <a class="ui simple dropdown item">
              Game
              <i class="dropdown icon"></i>
              <div class="menu">
                <div class="item">친선전</div>
                <div class="item">승급전</div>
                <div class="item">길드전</div>
              </div>
            </a>
            <a class="item" data-nav-value="rank">
              Rank
            </a>
            <div class="right menu">
              <a class="ui item signin" data-sign-value="signin">
                Sign in
              </a>
              <a class="ui item signup" data-sign-value="signup">
                Sign up
              </a>
              <a class="ui item logout invisible" data-sign-value="logout">
                Logout
              </a>
            </div>
            <div id="user_list" class="ui item">
              User list
            </div>
          </div>
        </nav>
      </div>
    </div>

    <div class="row">
      <div id="main-view">
        <span>This is Home in main-view!</span>
      </div>
    </div>
  </div>
</div>

<script type="text/template" id="user-status-view">
  <li class="ui teal image label">
    <img src="https://www.google.com/url?sa=i&url=https%3A%2F%2Ftowardsdatascience.com%2F3-numpy-image-transformations-on-baby-yoda-c27c1409b411&psig=AOvVaw1LYvwbCPbgXYP2X9P0lsyb&ust=1611236952945000&source=images&cd=vfe&ved=0CAIQjRxqFwoTCIDVzcPTqu4CFQAAAAAdAAAAABAD">
    <%%- intra_id %>
    <div class="detail"><%%- status %></div>
  </li>
</script>

<script>$(function(){$('.ui.dropdown').dropdown()});</script>
<script>$(function(){$('.ui.sidebar').sidebar("setting", "transition", "overlay").sidebar('toggle');})</script>
<script>
  $('#user_list').click(function() {
    $('.ui.sidebar').sidebar('toggle');
  })
</script>

<%= javascript_pack_tag 'app' %>

