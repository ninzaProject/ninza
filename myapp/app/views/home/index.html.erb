<%# <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css"/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script> %>

<%= stylesheet_link_tag 'registration', media: 'all' %>
<%= render partial: 'signin_modal' %>
<%= render partial: 'signup_modal' %>
<%= render partial: 'guilds' %>
<%= render partial: 'guild' %>
<%= render partial: 'create_guild' %>

<div id="spa" class="container ui grid">
  <div id="app-view" class="conatiner twelve wide column">
    <nav id="nav-view">
      <div class="ui top fixed inverted menu">
        <a class="ui item" data-nav-value="home">
          Home
        </a>
        <a class="item" data-nav-value="chat">
          Chat
        </a>
        <a class="ui simple dropdown item" data-nav-value="guilds">
          Guild
          <i class="dropdown icon"></i>
          <div class="menu">
            <div class="item" id="create-guild-button" data-nav-value="create">길드만들기</div>
            <div class="item" id="watch-guild-button" data-nav-value="guilds">길드 구경하기</div>
          </div>
        </a>
        <a class="ui simple dropdown item">
          Game
          <i class="dropdown icon"></i>
          <div class="menu">
            <div class="item">친선전</div>
            <div class="item">승급전</div>
            <div class="item">길드전</div>
          </div>
        </a>
        <a class="item" data-nav-value="rank">
          Rank
        </a>
        <div class="right menu">
          <a class="ui item signin" data-sign-value="signin">
            Sign in
          </a>
          <a class="ui item signup" data-sign-value="signup">
            Sign up
          </a>
          <a class="ui item logout invisible" data-sign-value="logout">
            Logout
          </a>
        </div>
      </div>
    </nav>
  </div>
  <div id="side-bar-view" class="four wide column">
    <div class="friends">
    </div>
    <div class="active-users">
    </div>
  </div>
  <div id="main-view" style="margin-top: 200px">
    <span>This is Home in main-view!</span>
  </div>
</div>

<script>$(function(){$('.ui.dropdown').dropdown()});</script>

<%= javascript_pack_tag 'app' %>

